<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="itemDate"
            type="com.onix.internship.okucherenko.data.repository.entity.MyWeekDate" />
        <variable
            name="clickListener"
            type="com.onix.internship.okucherenko.ui.task.WeekListener" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardViewDayOfWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        android:onClick="@{() -> clickListener.onClick(itemDate)}">

        <LinearLayout
            android:id="@+id/linearLayoutDayOfWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewDayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="6dp"
                android:gravity="center"
                android:textColor="@color/color_text_task"
                android:textSize="16sp"
                android:textStyle="bold"
                app:itemDateTextViewDayName="@{itemDate}"/>

            <TextView
                android:id="@+id/textViewDayValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:textColor="@color/color_text_task"
                app:itemDateTextViewDayValue="@{itemDate}" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>