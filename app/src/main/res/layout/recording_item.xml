<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="recordingItemListener"
            type="com.onix.internship.okucherenko.ui.result.RecordingListener" />

        <variable
            name="recording"
            type="com.onix.internship.okucherenko.data.Recording" />

        <variable
            name="resultViewModel"
            type="com.onix.internship.okucherenko.ui.result.ResultViewModel" />

        <import type="android.view.View" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{() -> recordingItemListener.onClick(recording)}">

            <TextView
                android:id="@+id/textViewGen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{recording.gen}"
                app:layout_constraintEnd_toStartOf="@+id/textViewSp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Steatornis" />

            <TextView
                android:id="@+id/textViewSp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{recording.sp}"
                app:layout_constraintEnd_toStartOf="@+id/textViewCnt"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textViewGen"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="caripensis" />

            <TextView
                android:id="@+id/textViewCnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{recording.cnt}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textViewSp"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="caripensis" />

            <TextView
                android:id="@+id/textViewRec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{recording.rec}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewGen"
                tools:text="Rosendo Manuel Fraga" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>