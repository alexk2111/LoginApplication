<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="point"
            type="com.onix.internship.okucherenko.data.repository.entity.Point" />

        <variable
            name="itemPointViewModel"
            type="com.onix.internship.okucherenko.ui.points.PointsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/quality_image"
            app:categoryImage="@{point}"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/ic_hero_24" />

        <TextView
            android:id="@+id/user_settings"
            app:userSettingsFormatted="@{point}"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/remove_image"
            app:layout_constraintStart_toEndOf="@+id/quality_image"
            app:layout_constraintTop_toTopOf="@+id/quality_image"
            tools:text="Wednesday" />

        <TextView
            android:id="@+id/actual_date"
            app:lastDate="@{point}"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/remove_image"
            app:layout_constraintStart_toStartOf="@+id/user_settings"
            app:layout_constraintTop_toBottomOf="@+id/user_settings"
            tools:text="Excellent!!!" />

        <ImageView
            android:id="@+id/remove_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/actual_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/user_settings"
            app:srcCompat="@android:drawable/btn_dialog" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>